<script>
  // Simple Tab Logic
  const tabs = document.querySelectorAll(".tab-btn");
  const contents = document.querySelectorAll(".tab-content");

  tabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      const target = tab.getAttribute("data-tab");

      // Update Tabs
      tabs.forEach((t) => {
        t.classList.remove("active");
        t.querySelector(".tab-indicator")?.classList.remove("opacity-100");
        t.querySelector(".tab-indicator")?.classList.add("opacity-0");
        t.classList.add("text-white/60");
        t.classList.remove("text-white");
      });

      tab.classList.add("active");
      tab.classList.remove("text-white/60");
      tab.classList.add("text-white");
      tab.querySelector(".tab-indicator")?.classList.add("opacity-100");
      tab.querySelector(".tab-indicator")?.classList.remove("opacity-0");

      // Update Content
      contents.forEach((c) => {
        c.classList.add("hidden");
        c.classList.remove("block");
      });

      const activeContent = document.getElementById(`tab-${target}`);
      if (activeContent) {
        activeContent.classList.remove("hidden");
        activeContent.classList.add("block");
      }
    });
  });
</script>
